<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.swpuiot.medias"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.BROADCAST_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.MessageActivity">
        </activity>

        <receiver android:name=".data.MessageReceiver"/>

        <activity
            android:name=".view.BeatBoxActivity"
            android:theme="@style/BeatBoxTheme">
        </activity>
        <activity android:name=".view.DragAndDrawActivity">
        </activity>
        <activity android:name=".view.PhotoGalleryActivity">
        </activity>
    </application>

</manifest>
